<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="?selectableItemBackground">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/song_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/song_hung_iv"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/song_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyTextTheme"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/text_grey_dark"/>
            <TextView
                android:id="@+id/song_artist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyTextTheme"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@color/text_grey_light"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/song_hung_iv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_reorder_grey"
            android:scaleType="center"/>
        <View
            android:id="@+id/divide_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_1_dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divide_line"/>
    </RelativeLayout>
</LinearLayout>