<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_cover_iv"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name_tv"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            style="@style/MyTextTheme"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:text="晴天"/>
        <TextView
            android:id="@+id/song_artist_tv"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/MyTextTheme"
            android:textColor="#727272"
            android:textSize="15sp"
            android:text="周杰伦"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/song_play_iv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_pause_circle_outline"/>
    <ImageView
        android:id="@+id/song_next_iv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_skip_next_grey"/>
</LinearLayout>