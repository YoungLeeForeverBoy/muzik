<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="horizontal"
    android:background="@drawable/rect_ripple"
    android:foreground="@drawable/rect_ripple">

    <ImageView
        android:id="@+id/song_cover_iv"
        android:layout_width="128dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/song_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                style="@style/MyTextTheme"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:text="晴天"/>
            <TextView
                android:id="@+id/song_artist_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/MyTextTheme"
                android:textColor="#727272"
                android:textSize="12sp"
                android:text="周杰伦"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/song_stop_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="right|top"
            android:layout_margin="10dp"
            android:src="@drawable/ic_clear_grey"
            android:scaleType="center"
            android:background="@drawable/rect_ripple"
            android:foreground="@drawable/rect_ripple"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/song_previous_iv"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:src="@drawable/ic_skip_previous_grey"
                android:scaleType="center"
                android:background="@drawable/rect_ripple"
                android:foreground="@drawable/rect_ripple"/>
            <ImageButton
                android:id="@+id/song_play_iv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_pause_circle_outline"
                android:background="@drawable/rect_ripple"
                android:foreground="@drawable/rect_ripple"/>
            <ImageButton
                android:id="@+id/song_next_iv"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_skip_next_grey"
                android:background="@drawable/rect_ripple"
                android:foreground="@drawable/rect_ripple"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
